<div class="container">
<h1>Account Details</h1>

  <div class="form">
  <% if @user.errors.any? %>
  <p><%= @user.errors.full_messages.join(', ') %> </p>
<% end %>

<%= form_with(model: @user) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class:"form-control" %>
  </div>
  <br>
  <%= f.submit "Update Account", class: "btn btn-outline-primary" %>
<% end %>
 <br>

 <a class="btn btn-outline-primary" href="<%= change_password_path %>">Change Password</a>

</div>