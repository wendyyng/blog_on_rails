<div class="container">
<h1>Account Details</h1>

<% if @user.errors.any? %>
  <p><%= @user.errors.full_messages.join(', ') %> </p>
<% end %>
<%= form_with model: @user do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit "Sign up" %>
<% end %>
</div>