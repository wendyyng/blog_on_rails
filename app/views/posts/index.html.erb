<div class="container">
<div class="container d-flex flex-wrap justify-content-around">
<% @posts.each do |post| %>
  <div class="card" style="width: 20rem; height: 15em; margin: 1em">
  <div class="card-body">
    <h5 class="card-title"><%= link_to post.title, post_path(post), class: "text-decoration-none" %></h5>
    <p class="card-text"><%=post.body.first(50)%>...</p>
  </div>
</div>
<br>
<% end %>
</div>
</div>