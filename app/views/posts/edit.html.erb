<div class="container">

<%= form_with(model: @post) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <br>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :body %>
    <br>
    <%= form.text_area :body, cols:50, rows: 5, class: "form-control"%>
  </div>
<br>

<%= form.submit "Update Post", class: "btn btn-outline-primary" %>
<% end %>
</div>